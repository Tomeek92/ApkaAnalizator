@model IEnumerable<ApkaAnalizatorDomain.Enties.Analizator>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background: url('/img/QM_Risikomanagement-e3c8118d.jpg');
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-position: center;
            background-repeat: no-repeat;
        }

        .container {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 1000px;
            margin: 30px auto;
        }

        h1 {
            color: #b9273d;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .table {
            margin-top: 20px;
            border: 1px solid #cfd8dc;
            border-radius: 8px;
            overflow: hidden;
        }

            .table th {
                background-color: black;
                color: #fff;
                font-weight: 500;
                padding: 15px;
                text-align: left;
            }

            .table td {
                padding: 15px;
                border-top: 1px solid #cfd8dc;
            }

            .table a {
                color: #1976d2;
                text-decoration: none;
                font-weight: 500;
            }

                .table a:hover {
                    text-decoration: underline;
                }

        .search-box {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #cfd8dc;
            padding: 15px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }

            .form-control:focus {
                border-color: #1976d2;
                box-shadow: 0 0 0 0.2rem rgba(25, 118, 210, 0.25);
            }

        .btn-dark {
            border: none;
            border-radius: 8px;
            color: #fff;
            padding: 10px 20px;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 20px;
        }

            .btn-dark:hover {
                background-color: #b9273d;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Lista podłączeń Analizatorów</h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <a href="@Url.Action("Analizator", "Home")" class="btn btn-dark mb-3">Dodaj nowe podłączenie</a>
        <div class="search-box">
            <input type="text" id="searchInput" class="form-control" placeholder="Szukaj...">
        </div>

        <table class="table" id="analizatorTable">
            <thead>
                <tr>
                    <th>
                       Nazwa analizatora
                    </th>
                    <th>
                        Nazwa Klienta
                    </th>
                    <th>
                        Data utworzenia
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameClient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Pokaż szczegółowy opis</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/js/search.js"></script>
</body>
</html>

